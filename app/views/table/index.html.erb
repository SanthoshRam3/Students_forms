<h1 style="text-align:center;">Student Details List</h1>
<table>
<thead>
<tr>
<th>Name Of The Students</th>
<th>List of Classes</th>
<th>Email Id List</th>
<th>Date of Birth List</th>
<th>Residential Area List</th>
<th>Contact Number List</th>
<th>Father Name List</th>
<th>Fathers Occupation List</th>
<th>Fathers Contact Number List</th>
<th>Mother Name List</th>
<th>Mother Occupation List </th>
<th>Mothers Contact Number</th>
<th colspan=3>Actions</th>
</tr>
</thead>
<tbody>
<% @tables.each do |list| %>
  <tr>
  <td><%= list.Name_of_the_Student  %></td>
  <td><%= list.Class  %></td>
  <td><%= list.Email_Id  %></td>
  <td><%= list.Date_of_birth  %></td>
  <td><%= list.Residential_Area  %></td>
  <td><%= list.Contact_Number  %></td>
  <td><%= list.Fathers_Name  %></td>
  <td><%= list.Occupation_of_Father  %></td>
  <td><%= list.Fathers_Contact_Number  %></td>
  <td><%= list.Mothers_Name  %></td>
  <td><%= list.Occupation_of_Mother  %></td>
  <td><%= list.Mothers_Contact_Number  %></td>
  <td><%= link_to 'Show', table_path(list)%></td>
  <td><%= link_to 'Edit', edit_table_path(list)%></td>
  <td><%= link_to 'Delete', table_path(list),method: :delete,data: { confirm: "Are you sure?"}%></td>
  </tr>
  <% end %>
</tbody>
</table>
